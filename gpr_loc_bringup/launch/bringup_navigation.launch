<?xml version="1.0" encoding="UTF-8"?>
<!-- This launch file loads a pre-recorded occupancy-grip map to use for the navigation stack-->
<launch>
    <arg name="gui" default="false" />
    <!-- the simulation & rviz -->
    <include file="$(find gpr_loc_bringup)/launch/bringup.launch">
        <!-- the arguments required to setup the Search and Rescue SLAM -->
        <arg name="sar_world" value="true" />
        <arg name="linear_ctrl" value="false" />
        <arg name="rviz_config_filename" value="gpr_loc_slam.rviz" />
        <!-- whether to start Gazebo GUI as well-->
        <arg name="gui" value="$(arg gui)" />
    </include>
    <!-- the node combining front and rear scans-->
    <include file="$(find gpr_loc_bringup)/launch/merge_scans.launch" />
    <!-- static TF from odom to map, which is used instead of a localization node
        because in this case, the gronud truth publisher is the localization node
    -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="odom_map"
        args="0 0 0 0 0 0 /odom /map" />
    <!-- The Map Server publishing the Occupancy Grid Map -->
    <node pkg="map_server" name="map_server" type="map_server"
        args="$(find gpr_loc_bringup)/maps/fhtw_world/gpr_loc_fhtw_world_occupancy_grid.yaml" />
    <!-- the move_base setup for navigation -->
    <include file="$(find gpr_loc_bringup)/launch/move_base.launch" />
</launch>